---
import Link from '@/components/Link.astro'
import { NAV_LINKS } from '@/consts'
---

<div>
  <div
    class="mx-auto mt-2 flex max-w-3xl items-center justify-between gap-4 px-4 py-3"
  >
    <Link href="/" class="flex items-baseline gap-x-2"
      ><h3 class="text-xl font-medium">Donghak Kim</h3>
      <p class="text-muted-foreground text-sm">
        Software &bull; Cloud Engineer
      </p>
    </Link>

    <div class="flex items-center gap-4">
      <nav class="flex items-center gap-4 text-sm sm:gap-6">
        {
          NAV_LINKS.map((item) => (
            <Link
              href={item.href}
              class="text-foreground/60 hover:text-foreground capitalize transition-colors"
            >
              {item.label}
            </Link>
          ))
        }
      </nav>
    </div>
  </div>
</div>
